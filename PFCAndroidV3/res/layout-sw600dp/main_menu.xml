<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/greenbg" >

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="71dp"
        android:background="@drawable/playm"
        android:contentDescription="@string/play_button"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/ImageView04"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/ImageView01"
        android:layout_alignTop="@+id/ImageView03"
        android:contentDescription="@string/reward_image_view"
        android:src="@drawable/defaultreward" 
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/ImageView04"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/reward_image_view"
        android:src="@drawable/defaultreward"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ImageView04"
        android:contentDescription="@string/reward_image_view"
        android:src="@drawable/defaultreward"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/ImageView02"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/ImageView04"
        android:layout_toRightOf="@+id/ImageView04"
        android:contentDescription="@string/reward_image_view"
        android:src="@drawable/defaultreward"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/ImageView05"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/ImageView04"
        android:layout_toRightOf="@+id/ImageView04"
        android:contentDescription="@string/reward_image_view"
        android:src="@drawable/defaultreward" 
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/playButton"
        android:layout_toRightOf="@+id/playButton"
        android:background="@drawable/profilem"
        android:contentDescription="@string/profile_button"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/ImageView03"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/imageView1"
        android:layout_toLeftOf="@+id/ImageView04"
        android:contentDescription="@string/reward_image_view"
        android:scaleType="fitXY"
        android:src="@drawable/defaultreward" />

</RelativeLayout>