<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/greenbg" >

    <EditText
        android:id="@+id/regNameET"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/regName"
        android:layout_alignRight="@+id/regName"
        android:layout_below="@+id/regName"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/regSurnameET"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/regSurname"
        android:layout_alignRight="@+id/regSurname"
        android:layout_below="@+id/regSurname"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="text" />

    <EditText
        android:id="@+id/regNickET"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/regNick"
        android:layout_alignRight="@+id/regNick"
        android:layout_below="@+id/regNick"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="text" />

    <ImageButton
        android:id="@+id/regButton"
        android:layout_width="340dp"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="104dp"
        android:contentDescription="@string/reg_password"
        android:scaleType="fitXY"
        android:src="@drawable/registerm" />

    <EditText
        android:id="@+id/psiCodeET"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_above="@+id/regButton"
        android:layout_alignLeft="@+id/psiCode"
        android:layout_alignRight="@+id/psiCode"
        android:layout_marginBottom="87dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/psiCode"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_above="@+id/psiCodeET"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/reg_nick"
        android:scaleType="fitXY"
        android:src="@drawable/psicode" />

    <ImageView
        android:id="@+id/regNick"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/regName"
        android:layout_marginRight="35dp"
        android:contentDescription="@string/reg_nick"
        android:scaleType="fitXY"
        android:src="@drawable/username" />

    <ImageView
        android:id="@+id/regName"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/regSurname"
        android:layout_marginTop="94dp"
        android:contentDescription="@string/reg_name"
        android:scaleType="fitXY"
        android:src="@drawable/name" />

    <ImageView
        android:id="@+id/regPassword"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_above="@+id/regPasswordET"
        android:layout_alignLeft="@+id/regNickET"
        android:contentDescription="@string/reg_password"
        android:scaleType="fitXY"
        android:src="@drawable/passwordm" />

    <EditText
        android:id="@+id/regPasswordET"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_above="@+id/psiCode"
        android:layout_alignLeft="@+id/regPassword"
        android:layout_alignRight="@+id/regPassword"
        android:layout_marginBottom="66dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/regSurname"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_above="@+id/regPasswordET"
        android:layout_marginRight="27dp"
        android:layout_toLeftOf="@+id/regPassword"
        android:contentDescription="@string/reg_surname"
        android:scaleType="fitXY"
        android:src="@drawable/surname" />
 
</RelativeLayout>